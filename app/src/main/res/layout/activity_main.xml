<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nordam.ruc.dk.pianoplayer.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/keyboardcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0">

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/whitekeys"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/whitekeys"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintRight_toLeftOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/whitekeys"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintRight_toLeftOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/whitekeys"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/whitekeys"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button6"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/whitekeys"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button7"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/whitekeys"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.498" />


    <Button
        android:id="@+id/black1"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/colorbutton"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/black2"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/colorbutton"
        app:layout_constraintLeft_toRightOf="@+id/black1"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/black3"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/colorbutton"
        app:layout_constraintLeft_toRightOf="@+id/black2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/black4"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/colorbutton"
        app:layout_constraintLeft_toRightOf="@+id/black3"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <Button
        android:id="@+id/black5"
        android:layout_width="50dp"
        android:layout_height="250dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/colorbutton"
        app:layout_constraintLeft_toRightOf="@+id/black4"
        app:layout_constraintTop_toTopOf="@+id/button4" />

</android.support.constraint.ConstraintLayout>
